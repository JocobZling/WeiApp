page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 32rpx;
}
.navigator-hover{
    background: none;
}

swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.button{
    margin-top: 60rpx;
    margin-left: 60rpx;
    margin-right: 60rpx;
}
.button button{
    margin-top: 10rpx;
}
.detail{
    height:200rpx;
    width: 700rpx;
    margin-top: 30rpx;
    margin-left: 25rpx;
    margin-right: 25rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    border-color: #c0c0c0;
    border-style: solid solid solid solid;
    border-width: 2rpx;
    box-shadow: #666666 0rpx 0rpx 8rpx;
    display: flex;
}
.myJoin{
    margin-top: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.myJoin .image{
    width: 100%;
    height: 50rpx;
}
.icon{
    height: 150rpx;
    width: 200rpx;
    margin: 25rpx;
}
.detailTitle{
    align-content: center;
}
.owner{
    align-content: center;
}
.text{
    display: flex;
    flex-direction: column;
    font-size: 40rpx;
}
.smallButton{
    height: 120rpx;
    width: 180rpx;
    margin-top: 35rpx;
    border-radius: 30rpx;
    background-color: #52a341;
    color: #FFFFFF;
    font-size: 40rpx;
}
